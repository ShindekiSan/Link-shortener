{
    "env": {
        "browser": true,
        "es2021": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": ["airbnb", "airbnb-typescript"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "project": "**/tsconfig.json",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "react/prop-types": 0,
        "react/require-default-props": "off",
        "func-names": ["error", "as-needed"],
        "no-underscore-dangle": ["error", { "allow": ["_id"] }],
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}] ,
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "ts": "never",
              "tsx": "never"
            }
         ]
    },
    "settings": {
        "react": {
            "version": "detect"
        },
        "import/resolver": {
            "node": {
               "extensions": [".ts", ".tsx"]
            }
         }
    }
}
